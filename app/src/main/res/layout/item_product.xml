<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@drawable/item_background">

        <!-- Product Image Placeholder - Using TextView as placeholder -->
        <TextView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:text="ðŸ›’"
            android:textSize="32sp"
            android:background="@drawable/image_placeholder"
            android:layout_marginEnd="16dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Product Name -->
            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Product Name"
                android:textColor="#1E1E1E"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"/>

            <!-- Product Price -->
            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="$99.99"
                android:textColor="#FF6B35"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <!-- Product Description -->
            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Product description goes here"
                android:textColor="#666666"
                android:textSize="14sp"
                android:maxLines="2"
                android:ellipsize="end"/>

            <!-- Rating and Stock Status -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Rating using text instead of icon -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â­"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tvRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="4.5"
                    android:textColor="#666666"
                    android:textSize="12sp"/>

                <!-- Stock Status -->
                <TextView
                    android:id="@+id/tvStockStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"
                    android:text="In Stock"
                    android:textColor="#4CAF50"
                    android:textSize="11sp"
                    android:background="@drawable/stock_background"/>

            </LinearLayout>
        </LinearLayout>

        <!-- Favorite using text emoji instead of icon -->
        <TextView
            android:id="@+id/tvFavorite"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:text="ðŸ¤"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginStart="8dp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>